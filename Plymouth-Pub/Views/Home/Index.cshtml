@using Microsoft.AspNet.Identity;
@model List<Plymouth_Pub.Models.Product>

@{
    ViewBag.Title = "Home Page";
}


<div class="row">
    @foreach (var product in this.Model)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img class="ProductImg" src="~/Images/@product.DefaultImageURL" >
                <div class="caption">
                    <h3>@product.Name</h3>
                    <p>@product.Description</p>
                    <p>Price : @product.Price</p>
                    <p>Stock : @product.Quantity</p>
                    <p>
                        <a onclick="AddToCart('@product.Id')" href="javascript:void(0);"
                           class="btn btn-primary" role="button">
                            Add to Cart
                        </a>
                        <a href="javascript:void(0);" class="btn btn-default" role="button">
                            Details
                        </a>
                    </p>
                </div>
            </div>
        </div>
    }
</div>



